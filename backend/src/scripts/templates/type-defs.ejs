<% function printProperty(prop, level) { 
  var indent = '  '.repeat(level);
  var result = `\n${indent}${prop.name}${!prop.required ? '?' : ''}:`;
  if (prop.type === 'array') {
    result += ' {';
    prop.items.forEach(function(item, index, array) {
      result += printProperty(item, level + 1);
    });
    result += `\n${indent}}[];`; // Corrected the indent level for the closing brace
  } else {
    result += ` ${prop.type}${prop.allowEmpty ? " | '' | null" : ''};`;
  }
  return result;
} %>