                <%= item.name %>: Joi.<%= item.type %>()<%= !item.required ? '.optional()' : '.required()' %><%- item.allowEmpty ? ".allow('')" : '' %>
              })<%= itemIndex < prop.items.items.length - 1 ? ',' : '' %>
            <% }); %>
          )
        <% } else { %> Joi.object({
            <% prop.items.properties.forEach(function(item, itemIndex) { %> <%= item.name %>: Joi.<%= item.type %>()<%= !item.required ? '.optional()' : '.required()' %><%- item.allowEmpty ? ".allow('')" : '' %><%= itemIndex < prop.items.properties.length - 1 ? ',' : '' %>  <% }); %> })  <% } %>)<%= !prop.required ? '.optional()' : '.required()' %><%= nextProp ? ',' : '' %>
